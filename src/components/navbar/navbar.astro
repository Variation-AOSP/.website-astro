---
/// <reference types="astro/client" />
import Container from "@/components/container.astro";
// import Search from "./search.astro";
import Logo from "./logo.astro";
---

<Container client:load>
  <header>
    <!-- 移除onclick属性 -->
    <button class="menu-button" id="menu-button">
      <span class="menu-icon-top"></span>
      <span class="menu-icon-bottom"></span>
    </button>
    <a href="/" class="logo-link">
      <Logo />
    </a>
  </header>

  <!-- <Search /> -->

  <div id="menu-container" class="menu-container">
    <ul>
      <li><a href="/download" onclick="closeMenu()">Get Started</a></li>
      <li><a href="/about" onclick="closeMenu()">Members</a></li>
      <li><a href="/blog" onclick="closeMenu()">Blog</a></li>
      <li><a href="/legal" onclick="closeMenu()">Legal</a></li>
    </ul>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menu = document.getElementById("menu-container");
      const menuButton = document.getElementById("menu-button");

      if (!menu || !menuButton) {
        console.error("菜单容器或菜单按钮未找到");
        return;
      }

      const toggleMenu = () => {
        menu.classList.toggle("menu-open");
        menuButton.classList.toggle("menu-btn-open");
        console.log(
          "菜单状态:",
          menu.classList.contains("menu-open") ? "打开" : "关闭",
        );
      };

      const closeMenu = () => {
        menu.classList.remove("menu-open");
        menuButton.classList.remove("menu-btn-open");
      };

      // 按钮点击事件（阻止冒泡）
      menuButton.addEventListener("click", (event) => {
        event.stopPropagation(); // 关键修改：阻止事件冒泡
        toggleMenu();
      });

      // 点击外部关闭菜单（仅在菜单打开时检查）
      document.addEventListener("click", (event) => {
        const target = event.target as HTMLElement;

        if (menu.classList.contains("menu-open")) {
          // 关键修改：仅在菜单打开时检查
          if (!menu.contains(target) && !menuButton.contains(target)) {
            closeMenu();
          }
        }
      });

      // ESC键关闭菜单
      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") {
          closeMenu();
        }
      });

      //   // 全局注册方法（保留，用于菜单项的onclick）
      //   window.toggleMenu = toggleMenu;
      //   window.closeMenu = closeMenu;
    });
  </script>

