---
import Container from "src/components/container.astro";
import Layout from "src/layouts/Layout.astro";
import Button from "src/components/ui/button.astro";
import GlobalStyles from "src/components/GlobalStyles.astro";
---

<Layout title="404 Not Found">
  <GlobalStyles />
  <Container>
    <main>
      <div>
        <h1>
          <span>404</span>Page not found
        </h1>
        <p>Sorry, we can’t find that page that you’re looking for.</p>
      </div>
      <Button onclick="window.location.href='/'">Let me home</Button>
    </main>
  </Container>
  <style>
    h1 {
      display: flex;
      flex-direction: column;
      font-size: 40px;
      line-height: 48px;
      align-items: center;
    }

    h1 span {
      font-size: 68px;
      font-family: var(--body-font);
      font-weight: 900;
      font-feature-settings: "zero" 1, "ss01" 1, "tnum" 1, "cv02" 1;
      line-height: 64px;
      margin-bottom: -22px;
      mask-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 1) 0%,
        rgba(0, 0, 0, 0) 100%
      );
      background-image: linear-gradient(
        to bottom,
        var(--md-sys-color-primary) 0%,
        var(--md-sys-color-inverse-primary) 100%
      );
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      color: transparent;
      position: relative;
      z-index: -1;
    }

    main {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 24px;
      text-align: center;
      min-height: calc(100vh - 60px - 20px);
      justify-content: center;
      padding-bottom: 128px;
      box-sizing: border-box;
    }
  </style>
</Layout>
